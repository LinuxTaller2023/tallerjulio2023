er: ansible

  - name: Install apache on Ubuntu
    apt:
     name: apache2
     update_cache: yes
     state: latest

  - name: Start and enabled httpd service
    service:
      name: apache2
      enabled: true
      state: started

  - name: Open firewall ports
    ufw:
      rule: allow
      port: "{{ item }}"
      state: enabled
      proto: tcp

    loop:
     - http
     - https

  handlers:
  - name: restart-apache
    service:
      name: apache2
      state: restarted

